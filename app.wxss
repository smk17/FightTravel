/**app.wxss**/
Page{
  background-color: #E9E9F1
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.tap{
  opacity: 1; 
}

.tap:active{
  opacity: 0.5; 
}

#toast{  
	position: fixed;  
	top: 0;  
	left: 0;  
	width: 90%;
	background-color: #B1BCCF;  
	padding: 20rpx 5%;  
	text-align:center;  
	opacity: 0.7; 
	transition: opacity 0.5s ease-out;  
}
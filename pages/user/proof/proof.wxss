/* pages/user/proof/proof.wxss */
.qrcode-title{
  width: 90%;
  margin-top: 50rpx;
  border: thin solid #dddddd;
  border-bottom: none;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container-list{
  width: 90%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 5%;
}

.container-text{
  width: 100%;
  height: 80rpx;
  border-bottom: thin solid #dddddd;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.container-txt{
  color: #4a4a4a;
}
.container-title{
    width: 25%;
}
.qrcode-title text{
  margin: 20rpx;
}
.qrcode-container{
  width: 90%;
  margin-bottom: 50rpx;
  border: thin solid #dddddd;
  border-top: none;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.qrcode-container image{
  width: 300rpx;
  height: 300rpx;
  border: thin solid #dddddd;
  margin: 20rpx;
}

.status{
  width: 100%;
  background-color: #2A88DF;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status text{
    color: #fff;
    font-size: 28rpx;
    margin: 20rpx;
}
.segmentation{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.segmentation-raidal{
  width: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.falling{
  flex: 1;
  height: 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.border{
    width: 90%;
    border-bottom:2rpx dashed #cccccc;
    height: 18rpx;
    overflow:hidden;
}
/* 左上 */
.raidal1 {
    height: 20rpx;
    width: 20rpx;
    background:radial-gradient(36rpx at left top,transparent 50%,white 50%);
}

/* 右上 */
.raidal2 {
    height: 20rpx;
    width: 20rpx;
    background:radial-gradient(36rpx at right top,transparent 50%,white 50%);
}

/* 右下 */
.raidal3 {
    height: 20rpx;
    width: 20rpx;
    background:radial-gradient(36rpx at right bottom,transparent 50%,white 50%);
}

/* 左下 */
.raidal4 {
    height: 20rpx;
    width: 20rpx;
    background:radial-gradient(36rpx at left bottom,transparent 50%,white 50%);
}
/**index.wxss**/
.top-tab{
  width: 100%;
  height: 84rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1rpx;
  border-bottom: thin solid #dddddd;
  border-top: thin solid #dddddd;
}
.select-city{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  height: 84rpx;
  border-right: thin solid #dddddd;
}
.select-city-txt{
  font-size: 32rpx;
}
.select-city-img{
  margin-left: 10rpx;
  width: 24rpx;
  height: 24rpx;
  transition: transform .4s;
  transform: rotate(90deg);
}
.horizontal-scroll{
  flex: 1;
  white-space: nowrap;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.horizontal-scroll-item{
  display: inline-block;
  width: 30%;
  height: 84rpx;
  text-align:center;
  line-height:84rpx;
  overflow:hidden;
  font-size: 32rpx;
}
.horizontal-scroll-item-select{
  color: #10AEFF;
}
.publish{
  width: 84rpx;
  height: 84rpx;
  text-align:center;
  line-height:84rpx;
  overflow:hidden;
  border-left: thin solid #dddddd;
}
.publish text{
  color: #10AEFF;
  font-size: 64rpx;
}
.vertical-scroll{
  height: 100%;
}
.activity{
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
}
.activity-title{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 5%;
  border-bottom: thin solid #dddddd;
}
.activity:active, .select-city:active, .publish:active{
  opacity: 0.5; 
}
.activity-desc-info{
  width: 95%;
  margin-left: 5%;
}
.activity-desc-info text{
    margin-bottom: 10rpx;
}
.activity-title-icon{
  width: 30rpx;
  height: 30rpx;
  margin: 5rpx;
}

.activity-title-txt{
  flex: 1;
  color: #aaa;
  font-size: 32rpx;
  margin: 20rpx 0;
}
.activity-desc-icon{
  width: 100%;
  height: 500rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.activity-desc-icon image{
  max-width: 100%;
}
.activity-desc{
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.activity-desc-txt{
  color: #aaa;
  flex: 1;
  font-size: 32rpx;
}
.activity-desc-money{
  color: sandybrown;
  font-size: 28rpx;
}